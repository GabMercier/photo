---
/**
 * About Page
 *
 * Profile photo + bio with minimalist design.
 * Content is loaded from a single bilingual file: src/content/about/about.md
 */
import Base from '@layouts/Base.astro';
import { getCollection } from 'astro:content';
import { getLocaleFromUrl, localized, t } from '@utils/i18n';
import { marked } from 'marked';

const locale = getLocaleFromUrl(Astro.url);

// Get about content (single bilingual file)
const aboutEntries = await getCollection('about');
const about = aboutEntries.find(entry => entry.id === 'about.md') || aboutEntries[0];

if (!about) {
  throw new Error('No about content found. Create src/content/about/about.md');
}

const { profileImage, tagline, contact, bio } = about.data;

// Render the localized bio markdown to HTML
const bioContent = bio ? localized(bio, locale) : '';
const bioHtml = bioContent ? await marked.parse(bioContent) : '';
---

<Base title={t('nav.about', locale)}>
  <section class="about container">
    <div class="about__layout">
      <!-- Profile image - circular -->
      <div class="about__image-wrap">
        <img
          src={profileImage.src}
          alt={localized(profileImage.alt, locale)}
          class="about__image"
          loading="eager"
        />
      </div>

      <!-- Content area -->
      <div class="about__content">
        {tagline && (
          <p class="about__tagline">{localized(tagline, locale)}</p>
        )}

        <div class="about__bio prose" set:html={bioHtml} />

        {contact && (contact.email || contact.instagram || contact.twitter) && (
          <div class="about__contact">
            {contact.email && (
              <a href={`mailto:${contact.email}`} class="about__contact-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="4" width="20" height="16" rx="2"/>
                  <path d="M22 6L12 13L2 6"/>
                </svg>
                <span>Email</span>
              </a>
            )}
            {contact.instagram && (
              <a href={`https://instagram.com/${contact.instagram}`} class="about__contact-link" target="_blank" rel="noopener">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="2" width="20" height="20" rx="5"/>
                  <circle cx="12" cy="12" r="4"/>
                  <circle cx="18" cy="6" r="1.5" fill="currentColor"/>
                </svg>
                <span>Instagram</span>
              </a>
            )}
            {contact.twitter && (
              <a href={`https://twitter.com/${contact.twitter}`} class="about__contact-link" target="_blank" rel="noopener">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
                </svg>
                <span>Twitter</span>
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </section>
</Base>

<style>
  .about {
    padding-top: var(--space-4xl);
    padding-bottom: var(--space-5xl);
    max-width: 1000px;
  }

  .about__layout {
    display: grid;
    gap: var(--space-3xl);
  }

  /* Desktop: profile image top-right */
  @media (min-width: 768px) {
    .about__layout {
      grid-template-columns: 1fr 200px;
      gap: var(--space-4xl);
    }

    .about__image-wrap {
      order: 2;
      position: sticky;
      top: calc(var(--header-height) + var(--space-2xl));
      height: fit-content;
    }

    .about__content {
      order: 1;
    }
  }

  /* Profile image */
  .about__image-wrap {
    display: flex;
    justify-content: center;
  }

  .about__image {
    width: 160px;
    height: 160px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid var(--color-border);
    transition: border-color var(--transition-base);
  }

  @media (min-width: 768px) {
    .about__image {
      width: 180px;
      height: 180px;
    }
  }

  .about__image:hover {
    border-color: var(--color-accent);
  }

  /* Content */
  .about__content {
    max-width: 65ch;
  }

  .about__tagline {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    letter-spacing: 0.04em;
    margin-bottom: var(--space-2xl);
  }

  /* Bio prose styling */
  .about__bio {
    color: var(--color-text);
    line-height: 1.8;
  }

  .about__bio :global(p) {
    margin-bottom: var(--space-lg);
  }

  .about__bio :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 400;
    color: var(--color-text);
    margin-top: var(--space-3xl);
    margin-bottom: var(--space-md);
    letter-spacing: 0.02em;
  }

  .about__bio :global(ul) {
    list-style: none;
    padding-left: 0;
    margin-bottom: var(--space-lg);
  }

  .about__bio :global(li) {
    position: relative;
    padding-left: var(--space-lg);
    margin-bottom: var(--space-xs);
    color: var(--color-text-muted);
  }

  .about__bio :global(li)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.7em;
    width: 4px;
    height: 4px;
    background-color: var(--color-accent);
    border-radius: 50%;
  }

  /* Hide the horizontal rule separator from markdown */
  .about__bio :global(hr) {
    display: none;
  }

  /* Contact links */
  .about__contact {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
  }

  .about__contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: var(--text-sm);
    letter-spacing: 0.04em;
    transition: color var(--transition-fast);
  }

  .about__contact-link:hover {
    color: var(--color-accent);
  }

  .about__contact-link svg {
    flex-shrink: 0;
  }
</style>
