---
/**
 * Header Component
 * 
 * Minimal, fixed navigation bar.
 * - Logo/site name on the left
 * - Nav links + language switcher + theme switcher on the right
 * - Hamburger menu on mobile
 * - Hides on scroll down, shows on scroll up (via JS)
 */
import { getLocaleFromUrl, t, localePath, alternateLocalePath } from '@utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const currentPath = Astro.url.pathname;

// Navigation links
const navLinks = [
  { key: 'nav.feed', path: '/feed' },
  { key: 'nav.gallery', path: '/gallery' },
  { key: 'nav.about', path: '/about' },
];

/**
 * Check if a nav link is the current page.
 * Handles both /feed and /fr/feed cases.
 */
function isActive(linkPath: string): boolean {
  const localized = localePath(linkPath, locale);
  return currentPath === localized || currentPath === localized + '/';
}
---

<header class="header" id="site-header">
  <div class="header__inner container">
    <!-- Logo / Site name - collapses to dot on scroll -->
    <a href={localePath('/', locale)} class="header__logo" aria-label="Home">
      <span class="logo__text" aria-hidden="true">gpho</span>
      <span class="logo__dot" aria-hidden="true"></span>
      <span class="logo__text" aria-hidden="true">to</span>
    </a>

    <!-- Desktop navigation -->
    <nav class="header__nav" aria-label="Main navigation">
      {navLinks.map(link => (
        <a
          href={localePath(link.path, locale)}
          class:list={['header__link', { 'header__link--active': isActive(link.path) }]}
        >
          {t(link.key, locale)}
        </a>
      ))}

      <!-- Language switcher -->
      <a href={alternateLocalePath(Astro.url)} class="header__lang" aria-label="Switch language">
        {t('lang.switch', locale)}
      </a>
    </nav>

    <!-- Mobile hamburger -->
    <button
      class="header__hamburger"
      id="mobile-menu-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
    </button>
  </div>

  <!-- Mobile menu overlay (full-screen) -->
  <div class="header__mobile-menu" id="mobile-menu" aria-hidden="true">
    <nav class="header__mobile-nav">
      {navLinks.map((link, index) => (
        <a
          href={localePath(link.path, locale)}
          class:list={['header__mobile-link', { 'header__mobile-link--active': isActive(link.path) }]}
          style={`--link-index: ${index}`}
        >
          {t(link.key, locale)}
        </a>
      ))}
      <div class="header__mobile-controls" style="--link-index: 3">
        <a href={alternateLocalePath(Astro.url)} class="header__mobile-lang">
          {t('lang.switch', locale)}
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- Client-side scripts for mobile menu and scroll behavior -->
<script>
  /**
   * Mobile menu toggle
   */
  function initMobileMenu() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const header = document.getElementById('site-header');
    if (!toggle || !menu || !header) return;

    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isOpen));
      menu.setAttribute('aria-hidden', String(isOpen));
      menu.classList.toggle('header__mobile-menu--open');
      toggle.classList.toggle('header__hamburger--open');
      header.classList.toggle('header--menu-open');

      // Prevent body scroll when menu is open
      document.body.style.overflow = isOpen ? '' : 'hidden';
    });

    // Close menu on link click
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        toggle.setAttribute('aria-expanded', 'false');
        menu.setAttribute('aria-hidden', 'true');
        menu.classList.remove('header__mobile-menu--open');
        toggle.classList.remove('header__hamburger--open');
        header.classList.remove('header--menu-open');
        document.body.style.overflow = '';
      });
    });
  }

  /**
   * Logo scroll behavior - collapse to dot on scroll or inactivity
   * Expands again on page load/navigation only
   */
  function initScrollBehavior() {
    const header = document.getElementById('site-header');
    if (!header) return;

    const SCROLL_THRESHOLD = 50;
    const INACTIVITY_DELAY = 3000; // 3 seconds

    let inactivityTimeout: ReturnType<typeof setTimeout> | null = null;

    function collapse() {
      header.classList.add('header--scrolled');
    }

    function expand() {
      header.classList.remove('header--scrolled');
    }

    function updateHeaderState() {
      if (window.scrollY > SCROLL_THRESHOLD) {
        collapse();
      } else {
        expand();
      }
    }

    // Initial check
    updateHeaderState();

    // Start inactivity timer (only runs once per page load)
    inactivityTimeout = setTimeout(() => {
      // Only collapse if not already scrolled down
      if (window.scrollY <= SCROLL_THRESHOLD) {
        collapse();
      }
    }, INACTIVITY_DELAY);

    // Listen for scroll - scrolling up at top expands, scrolling down collapses
    window.addEventListener('scroll', updateHeaderState, { passive: true });

    // Cleanup on navigation
    document.addEventListener('astro:before-swap', () => {
      if (inactivityTimeout) clearTimeout(inactivityTimeout);
    }, { once: true });
  }

  // Initialize on first load
  initMobileMenu();
  initScrollBehavior();

  // Re-initialize after Astro View Transitions swap
  document.addEventListener('astro:after-swap', () => {
    initMobileMenu();
    initScrollBehavior();
  });
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    z-index: var(--z-header);
    background-color: transparent; /* Transparent to show carousel gradient */
    backdrop-filter: blur(12px); /* Frosted glass effect */
    -webkit-backdrop-filter: blur(12px);
    border-bottom: none; /* Remove border for seamless gradient effect */
    overflow: visible;
    transition: background-color var(--transition-base);
  }

  /* When mobile menu is open, solid background */
  .header--menu-open {
    background-color: var(--color-bg);
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    overflow: visible;
    position: relative;
    z-index: 2; /* Above mobile menu overlay */
  }

  /* Logo - full text that collapses to dot on scroll */
  .header__logo {
    display: inline-flex;
    align-items: baseline;
    justify-content: center;
    text-decoration: none;
    padding: var(--space-xs);
    font-family: 'Urbanist', sans-serif;
    font-weight: 600;
    font-size: clamp(2rem, 5vw, 2.5rem);
    letter-spacing: 0.06em;
    line-height: 1;
    overflow: visible;
    transition: all var(--transition-base);
  }

  /* Glass text effect - translucent with crisp edge */
  .logo__text {
    display: inline;
    background: linear-gradient(
      165deg,
      hsla(var(--color-accent-hue), 10%, 82%, 0.08) 0%,
      hsla(var(--color-accent-hue), 12%, 78%, 0.03) 50%,
      hsla(var(--color-accent-hue), 10%, 82%, 0.08) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 1px hsla(var(--color-accent-hue), 12%, 72%, 0.85);
    text-shadow:
      0 0 6px hsla(var(--color-accent-hue), 18%, 70%, 0.15),
      -0.5px 0 0 hsla(0, 50%, 62%, 0.18),
      0.5px 0 0 hsla(180, 50%, 62%, 0.18);
    opacity: 1;
    max-width: 120px;
    overflow: visible;
    transition:
      opacity var(--transition-base),
      max-width var(--transition-base),
      margin var(--transition-base);
  }

  /* Glass dot - positioned at baseline like a URL period */
  .logo__dot {
    --dot-size: 0.22em;

    display: inline-block;
    width: var(--dot-size);
    height: var(--dot-size);
    flex-shrink: 0;
    position: relative;
    border-radius: 50%;
    vertical-align: baseline;
    margin: 0 0.02em;

    /* Hollow glass - subtle translucent center */
    background: radial-gradient(
      circle at center,
      hsla(var(--color-accent-hue), 12%, 75%, 0.03) 0%,
      hsla(var(--color-accent-hue), 16%, 68%, 0.08) 70%,
      hsla(var(--color-accent-hue), 18%, 62%, 0.12) 100%
    );

    /* Crisp glass rim */
    border: 1.5px solid hsla(var(--color-accent-hue), 12%, 72%, 0.8);

    /* Subtle glow */
    box-shadow:
      inset 0 0 3px hsla(var(--color-accent-hue), 10%, 100%, 0.1),
      0 0 4px hsla(var(--color-accent-hue), 18%, 70%, 0.15);

    transition:
      width var(--transition-base),
      height var(--transition-base),
      transform var(--transition-base),
      box-shadow var(--transition-base),
      border-color var(--transition-base);
  }

  /* Dot highlight arc */
  .logo__dot::before {
    content: '';
    position: absolute;
    inset: 1px;
    border-radius: 50%;
    background: linear-gradient(
      160deg,
      hsla(var(--color-accent-hue), 12%, 100%, 0.3) 0%,
      hsla(var(--color-accent-hue), 10%, 100%, 0.1) 25%,
      transparent 50%
    );
    pointer-events: none;
  }

  /* Dot chromatic aberration */
  .logo__dot::after {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 50%;
    box-shadow:
      -0.5px 0 0 hsla(0, 55%, 60%, 0.2),
      0.5px 0 0 hsla(180, 55%, 60%, 0.2);
    pointer-events: none;
    opacity: 0.7;
  }

  /* Hover state */
  .header__logo:hover .logo__text {
    -webkit-text-stroke: 1px hsla(var(--color-accent-hue), 15%, 80%, 0.95);
    text-shadow:
      0 0 10px hsla(var(--color-accent-hue), 22%, 70%, 0.25),
      -0.6px 0 0 hsla(0, 55%, 62%, 0.22),
      0.6px 0 0 hsla(180, 55%, 62%, 0.22);
  }

  .header__logo:hover .logo__dot {
    border-color: hsla(var(--color-accent-hue), 15%, 80%, 0.9);
    box-shadow:
      inset 0 0 4px hsla(var(--color-accent-hue), 12%, 100%, 0.15),
      0 0 8px hsla(var(--color-accent-hue), 22%, 70%, 0.25);
  }

  .header__logo:hover .logo__dot::after {
    opacity: 0.9;
    box-shadow:
      -0.7px 0 0 hsla(0, 60%, 60%, 0.25),
      0.7px 0 0 hsla(180, 60%, 60%, 0.25);
  }

  /* ========================== */
  /* Scrolled state - dot only  */
  /* ========================== */
  .header--scrolled .logo__text {
    opacity: 0;
    max-width: 0;
    margin: 0;
  }

  .header--scrolled .logo__dot {
    width: 28px;
    height: 28px;
  }

  /* Subtle shimmer animation on dot when collapsed */
  @media (prefers-reduced-motion: no-preference) {
    .header--scrolled .logo__dot {
      animation: dot-shimmer 6s ease-in-out infinite;
    }

    .header__logo:hover .logo__dot {
      animation: none;
    }
  }

  @keyframes dot-shimmer {
    0%, 100% {
      box-shadow:
        inset 0 0 3px hsla(var(--color-accent-hue), 10%, 100%, 0.1),
        0 0 4px hsla(var(--color-accent-hue), 18%, 70%, 0.15);
    }
    50% {
      box-shadow:
        inset 0 0 4px hsla(var(--color-accent-hue), 12%, 100%, 0.14),
        0 0 6px hsla(var(--color-accent-hue), 20%, 70%, 0.2);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .logo__dot {
      animation: none !important;
    }
  }

  /* Desktop nav */
  .header__nav {
    display: none;
    align-items: center;
    gap: var(--space-xl);
  }

  @media (min-width: 640px) {
    .header__nav {
      display: flex;
    }
    .header__hamburger {
      display: none !important;
    }
  }

  .header__link {
    font-size: var(--text-sm);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    text-decoration: none;
    padding-block: var(--space-xs);
    position: relative;
    transition: color var(--transition-fast);
  }

  .header__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: var(--color-accent);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .header__link:hover {
    color: var(--color-text);
  }

  .header__link:hover::after {
    transform: scaleX(1);
  }

  .header__link--active {
    color: var(--color-accent);
  }

  .header__link--active::after {
    transform: scaleX(1);
  }

  /* Language switcher */
  .header__lang {
    font-size: var(--text-xs);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-subtle);
    border: 1px solid var(--color-border);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .header__lang:hover {
    color: var(--color-text);
    border-color: var(--color-text-muted);
  }

  /* Hamburger (mobile) */
  .header__hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 28px;
    height: 28px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .header__hamburger-line {
    display: block;
    width: 100%;
    height: 1.5px;
    background-color: var(--color-text);
    transition: transform var(--transition-base), opacity var(--transition-fast);
  }

  .header__hamburger--open .header__hamburger-line:first-child {
    transform: translateY(3.25px) rotate(45deg);
  }

  .header__hamburger--open .header__hamburger-line:last-child {
    transform: translateY(-3.25px) rotate(-45deg);
  }

  /* ================================== */
  /* Mobile menu overlay (full-screen) */
  /* ================================== */
  .header__mobile-menu {
    position: fixed;
    inset: 0;
    background-color: var(--color-bg);
    z-index: calc(var(--z-header) - 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition:
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 0.4s;
  }

  .header__mobile-menu--open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .header__mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .header__mobile-link {
    font-family: var(--font-body);
    font-size: clamp(1.5rem, 6vw, 2rem);
    font-weight: 400;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    text-decoration: none;
    position: relative;
    padding: var(--space-sm) var(--space-md);

    /* Staggered animation setup */
    opacity: 0;
    transform: translateY(20px);
    transition:
      color var(--transition-fast),
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: calc(var(--link-index, 0) * 0.08s);
  }

  .header__mobile-menu--open .header__mobile-link {
    opacity: 1;
    transform: translateY(0);
  }

  .header__mobile-link::after {
    content: '';
    position: absolute;
    bottom: var(--space-xs);
    left: var(--space-md);
    right: var(--space-md);
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent),
      transparent
    );
    transform: scaleX(0);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .header__mobile-link:hover,
  .header__mobile-link--active {
    color: var(--color-accent);
  }

  .header__mobile-link:hover::after,
  .header__mobile-link--active::after {
    transform: scaleX(1);
  }

  .header__mobile-controls {
    margin-top: var(--space-2xl);
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: calc(var(--link-index, 3) * 0.08s);
  }

  .header__mobile-menu--open .header__mobile-controls {
    opacity: 1;
    transform: translateY(0);
  }

  .header__mobile-lang {
    font-size: var(--text-sm);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-subtle);
    border: 1px solid var(--color-border);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .header__mobile-lang:hover {
    color: var(--color-text);
    border-color: var(--color-accent);
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .header__mobile-menu {
      transition: opacity 0.15s, visibility 0.15s;
    }
    .header__mobile-link,
    .header__mobile-controls {
      transition: color 0.15s, opacity 0.15s;
      transform: none !important;
      transition-delay: 0s !important;
    }
  }

  @media (min-width: 640px) {
    .header__mobile-menu {
      display: none;
    }
  }
</style>
